<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Room Type"
            app:boxStrokeColor="@color/button"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:hintTextColor="@color/button"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Price"
            app:boxStrokeColor="@color/button"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:hintTextColor="@color/button"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Room Description"
            app:boxStrokeColor="@color/button"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:hintTextColor="@color/button"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_room_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Number Available"
            app:boxStrokeColor="@color/button"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:hintTextColor="@color/button"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_number_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Room Image"
            app:boxStrokeColor="@color/button"
            app:boxStrokeErrorColor="@color/red"
            app:endIconMode="clear_text"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:hintTextColor="@color/button"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_room_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_save"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:backgroundTint="#F86C40"
                android:elevation="4dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="10dp"
                app:cornerRadius="10dp"
                android:layout_marginStart="100dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancle"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:backgroundTint="#F86C40"
                android:elevation="4dp"
                android:text="Cancle"
                android:textAllCaps="false"
                android:textSize="10dp"
                app:cornerRadius="10dp"
                android:layout_marginStart="50dp"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>